class Person:
    def __init__(self, name, age):
        self.name = name
        self.age = age

    def talk(self):
        print(f'반갑습니다. {self.name}입니다.')


class Professor(Person):
    def __init__(self, name, age, department):
        self.name = name
        self.age = age
        self.department = department

    # 부모 클래스의 메서드와 같은 이름의 메서드 사용 가능
    # 이러면 이 메서드가 default
    def talk(self):
        print('잘 부탁드립니다.')


class Student(Person):
    def __init__(self, name, age, gpa):
        self.name = name
        self.age = age
        self.gpa = gpa


p1 = Professor('김교수', 25, '지구과학부')